<% layout('/layouts/boilerplate')-%>
<div class="row mt-3">
   <div class="col-8 offset-2">
     <br><br>
  
  <h3>Create a new list</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation">
   <div class="mb-3">
      <lable for="title" class="form-lable">Title</lable>
      <input name="listing[title]" class="form-control" placeholder="Add a catchy title" class="form-control" type="text"required>
      <div class="valid-feedback">Its good</div>
      <div class="invalid-feedback">Please enter the correct title</div>
   </div>

    
  
   
      <div class="mb-3">
      <lable for="description"class="form-lable">Description</lable>
          <textarea name="listing[description]"class="form-control"      required
          ></textarea>
          <div class="invalid-feedback">Please enter the short description</div>
      <div class="valid-feedback">Its good</div>
   </div>
   
      <div class="mb-3">
      <lable for="image" class="form-lable">Image Link</lable>
      <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control"
      >
   </div>
       <div class="row">
         
       
      <div class="mb-3 col-md-4" >
      <lable for="price" class="form-lable">Price</lable>
      <input name="listing[price]" placeholder="1200"  class="form-control"
      required>
       <div class="valid-feedback">Its good</div>
      <div class="invalid-feedback">Please enter the correct Price</div>
   </div>

      <div class="mb-3 col-md-8">
      <lable for="country" class="form-lable">Country Name</lable>
      <input name="listing[country]" placeholder="India" type="text" class="form-control"
      required>
       <div class="valid-feedback">Its good</div>
      <div class="invalid-feedback">Please enter the correct country name</div>
   </div>
       </div>
   <div class="mb-3">
      <lable for="location " class="form-lable">Location</lable>
       <input name="listing[location]" placeholder="Jaypur , Rajasthan" type="text" class="form-control"
       required>
        <div class="valid-feedback">Its good</div>
      <div class="invalid-feedback">Please enter the correct location</div>
   </div>
      



       <button class="btn btn-dark add-btn mt-3">Add</button>
 
           <br><br>
  </form>

 </div>
</div>