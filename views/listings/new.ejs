<% layout('/layouts/boilerplate')-%>
<div class="row mt-3">
   <div class="col-8 offset-2">
     <br><br>
  
  <h3>Create a new list</h3>
  <form method="POST" action="/listings">
   <div class="mb-3">
      <lable for="title" class="form-lable">Title</lable>
      <input name="listing[title]" class="form-control" placeholder="Add a catchy title" type="text">
   </div>

    
  
   
      <div class="mb-3">
      <lable for="description" class="form-lable">Description</lable>
          <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control"></textarea>
   </div>
   
      <div class="mb-3">
      <lable for="image" class="form-lable">Image Link</lable>
      <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
   </div>
       <div class="row">
         
       
      <div class="mb-3 col-md-4" >
      <lable for="price" class="form-lable">Price</lable>
      <input name="listing[price]" placeholder="1200" type="number" class="form-control">
   </div>

      <div class="mb-3 col-md-8">
      <lable for="country" class="form-lable">Country Name</lable>
      <input name="listing[country]" placeholder="India" type="text" class="form-control">
   </div>
       </div>
   <div class="mb-3">
      <lable for="location " class="form-lable">Location</lable>
       <input name="listing[location]" placeholder="Jaypur , Rajasthan" type="text" class="form-control">
   </div>
      



       <button class="btn btn-dark add-btn mt-3">Add</button>
 
           <br><br>
  </form>

 </div>
</div>